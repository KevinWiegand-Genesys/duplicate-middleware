{
    "include": ["src/**/*"],
    "compilerOptions": {
        /* Forced by serverless-typescript plugin (cannot be overridden) */
        "rootDir": "./",
        "outDir": ".build",

        /* Project Options */
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": true, // Enables the generation of sourcemap files
        "lib": [
            "es2020"
        ],

        /* Module Resolution */
        "baseUrl": "src", // Set a base directory to resolve non-absolute module names
        "moduleResolution": "node", // Sets the module system for the program

        /* Strict Checks */
        "strict": true, // Enable all strict type-checking options

        /* JavaScript Support */
        "allowJs": true, // Allow JavaScript files to be imported inside your project,

        /* Linter Checks */
        "noUnusedLocals": true, // Report errors on unused local variables
        "noEmitOnError": true, // Do not emit compiler output files
        "noUnusedParameters": true, // Report errors on unused parameters in functions

        "esModuleInterop": true,

        "resolveJsonModule": true // Allows .json imports
    },
    "exclude": [
        "./test"
    ]
}
